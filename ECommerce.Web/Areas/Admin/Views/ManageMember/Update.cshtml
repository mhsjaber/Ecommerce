@model ECommerce.Web.Areas.Admin.Models.MemberViewModel
@{
    ViewBag.Title = "Update";
}

<section class="content-header">
    <h1>
        Member
        <small>Preview</small>
    </h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-danger">
                <div class="box-header">
                    <h3 class="box-title">Update Member</h3>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2">
                            <form class="form-horizontal" method="post" action="/Admin/ManageMember/Update">
                                <div class="form-group">
                                    <label class="control-label col-sm-4" for="email">Name:</label>
                                    <div class="col-sm-8">
                                        @Html.HiddenFor(m=> m.MemberID)
                                        @Html.TextBoxFor(model => model.FullName, new { @class = "form-control", id = "Fullname", placeholder = "Enter full name" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-sm-4" for="email">Email:</label>
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", id = "email", placeholder = "Enter email" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-sm-4" for="email">Password:</label>
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control", id = "password", placeholder = "Enter password", disabled= "disabled" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-sm-4" for="email">Username:</label>
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(model => model.Username, new { @class = "form-control", id = "username", placeholder = "Enter username" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-sm-4" for="email">Mobile:</label>
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(model => model.Mobile, new { @class = "form-control", id = "mobile", placeholder = "Enter mobile" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-sm-4" for="email">Address:</label>
                                    <div class="col-sm-8">
                                        @Html.TextAreaFor(model => model.Address, new { @class = "form-control", id = "mobile", placeholder = "Enter mobile" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-sm-4" for="email">Status:</label>
                                    <div class="col-sm-8">
                                        @Html.EnumDropDownListFor(model => model.Status, new { @class = "form-control", id = "status"})
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-8 col-sm-offset-4">
                                        <input type="submit" class="btn btn-success" value="Add">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

