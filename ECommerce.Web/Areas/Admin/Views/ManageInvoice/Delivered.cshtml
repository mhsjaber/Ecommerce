@model IEnumerable<ECommerce.Web.Areas.Admin.Models.InvoiceViewModel>
@{
    ViewBag.Title = "Index";
    int count = 1;
}
<section class="content-header">
    <h1>
        Invoice List
        <small>List of Customer Invoice</small>
    </h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Old Invoice</h3>
                </div>
                <div class="box-body">
                    <table id="table" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th style="width: 50px">Sl</th>
                                <th>Inv. No.</th>
                                <th>Customer Name</th>
                                <th>Status </th>
                                <th>Create Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@(count++)</td>
                                    <td>INV-@item.Number.ToString("0000")</td>
                                    <td>
                                        @if (item.CustomerID.HasValue)
                                        {
                                            <a href="/admin/managecustomer/details/@item.CustomerID">@item.CustomerName</a>
                                        }
                                    </td>
                                    <td>@item.Status.ToString()</td>
                                    <td>@item.CreatedOn.ToString("MMM dd, yyyy hh:mm tt")</td>
                                    <td>
                                        <a href="/Admin/Manageinvoice/Update/@item.InvoiceID">Edit</a> |
                                        <a href="/Admin/Manageinvoice/details/@item.InvoiceID">Details</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
