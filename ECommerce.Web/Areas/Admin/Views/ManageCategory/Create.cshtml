@model ECommerce.Web.Areas.Admin.Models.CategoryViewModel

@{
    ViewBag.Title = "Create";
}
<section class="content-header">
    <h1>
        Category
        <small>Preview</small>
    </h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-danger">
                <div class="box-header">
                    <h3 class="box-title">Add Category</h3>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-6 col-md-offset-3">
                            <form class="form-horizontal" method="post" action="/Admin/ManageCategory/Create">
                                <div class="form-group">
                                    <label class="control-label col-sm-2" for="email">Name:</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(model => model.Name, new { @class= "form-control", id = "email", placeholder = "Enter category" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-10 col-sm-offset-2">
                                        <input type="submit" class="btn btn-success" value="Add">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

