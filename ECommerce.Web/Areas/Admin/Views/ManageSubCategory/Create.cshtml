@model ECommerce.Web.Areas.Admin.Models.SubCategoryViewModel

@{
    ViewBag.Title = "Create";
}
<section class="content-header">
    <h1>
        Category
        <small>Preview</small>
    </h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-danger">
                <div class="box-header">
                    <h3 class="box-title">Add Sub Category</h3>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2">
                            <form class="form-horizontal" method="post" action="/Admin/ManageSubCategory/Create">
                                <div class="form-group">
                                    <label class="control-label col-sm-4" for="email">Select Category:</label>
                                    <div class="col-sm-8">
                                        <select class="form-control" name="CategoryID">
                                            @foreach (var item in Model.Category)
                                            {
                                                <option value="@item.CategoryID">@item.CategoryName</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-sm-4" for="email">Sub Category Name:</label>
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(model => model.SubCategoryName, new { @class = "form-control", id = "email", placeholder = "Enter sub category" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-8 col-sm-offset-4">
                                        <input type="submit" class="btn btn-success" value="Add">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

